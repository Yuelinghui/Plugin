<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:gravity="center_vertical"
	android:orientation="vertical" >

	<LinearLayout
		android:id="@+id/view_select_channel"
		android:layout_width="match_parent"
		android:layout_height="@dimen/cp_widget_height"
		android:background="@drawable/tableview_item_bg"
		android:gravity="center_vertical"
		android:orientation="horizontal"
		android:paddingLeft="@dimen/margin_h_middle"
		android:paddingRight="@dimen/margin_h_middle" >

		<!-- 银行图标 -->

		<com.yuelinghui.widget.image.CPImageView
			android:id="@+id/img_banklogo"
			android:layout_width="@dimen/image_normal"
			android:layout_height="@dimen/image_normal"
			android:scaleType="fitXY" />

		<!-- 已绑定的银行卡 -->

		<TextView
			android:id="@+id/txt_bankcard"
			style="@style/txt_normal"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginLeft="@dimen/margin_h_middle"
			android:layout_weight="1" />

		<!-- 右侧箭头 -->

		<ImageView
			android:id="@+id/img_select_arrow"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/common_select_arrow" />
	</LinearLayout>

	<!-- 银行卡限额 -->

	<TextView
		android:id="@+id/txt_limit"
		style="@style/txt_hint"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="@dimen/margin_h_middle"
		android:layout_marginTop="@dimen/margin_h_small"
		android:textSize="@dimen/size_small" />

</LinearLayout>