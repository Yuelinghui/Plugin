<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:duplicateParentState="true"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_item_high"
		android:background="@drawable/common_list_main_without_border"
        android:gravity="center_vertical"
		android:orientation="horizontal" >

        <com.yuelinghui.widget.image.CPImageView
            android:id="@+id/img_action"
			android:layout_width="24dp"
			android:layout_height="24dp"
			android:layout_marginLeft="@dimen/margin_h_middle"
			android:layout_marginRight="@dimen/margin_h_middle" />

        <TextView
            android:id="@+id/txt_action"
			style="@style/txt_xmiddle"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:gravity="center" />
    </LinearLayout>

    <View
		style="@style/divider_line"
		android:layout_width="match_parent" />

</LinearLayout>