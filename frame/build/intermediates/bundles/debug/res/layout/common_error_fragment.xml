<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/layout_error"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_centerInParent="true"
	android:background="@color/common_bg"
	android:gravity="center"
	android:orientation="vertical" >

	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@drawable/error_net_ic" />

	<TextView
		android:id="@+id/txt_refresh_net"
		style="@style/txt_normal"
		android:layout_marginTop="@dimen/margin_v_middle"
		android:text="@string/common_refresh_net"
		android:textColor="@color/weak"
		android:textSize="@dimen/size_large" />

</LinearLayout>