<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content" >

	<TextView
		android:id="@+id/txt_integer"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:singleLine="true"
		android:textSize="20sp"
		android:textStyle="bold" />

	<TextView
		android:id="@+id/txt_decimal"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignTop="@id/txt_integer"
		android:layout_marginLeft="-3dp"
		android:layout_toRightOf="@id/txt_integer"
		android:gravity="top"
		android:singleLine="true"
		android:textSize="12sp"
		android:textStyle="bold" />

	<TextView
		android:id="@+id/txt_suffix"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignBottom="@id/txt_integer"
		android:layout_marginLeft="@dimen/margin_h_small"
		android:layout_toRightOf="@id/txt_decimal"
		android:singleLine="true"
		android:textSize="20sp"
		android:textStyle="bold" />

</RelativeLayout>