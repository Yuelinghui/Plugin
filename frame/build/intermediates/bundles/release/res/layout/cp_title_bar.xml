<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/layout_title"
	android:layout_width="match_parent"
	android:layout_height="@dimen/common_title_height"
	android:background="@color/white" >

	<RelativeLayout
		android:id="@+id/layout_base"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="center_vertical" >

		<com.frame.widget.image.CPImageView
			android:id="@+id/img_back"
			android:layout_width="@dimen/common_title_height"
			android:layout_height="@dimen/common_title_height"
			android:layout_centerVertical="true"
			android:padding="13dp"
			android:scaleType="fitCenter"
			android:src="@drawable/icon_cancel_black"
			android:visibility="gone" />

		<TextView
			android:id="@+id/txt_main_title"
			android:layout_width="wrap_content"
			android:layout_height="fill_parent"
			android:layout_centerInParent="true"
			android:drawablePadding="@dimen/padding_small"
			android:drawableRight="@null"
			android:gravity="center_vertical|left"
			android:maxWidth="210dp"
			android:singleLine="true"
			android:textColor="@color/common_title_txt"
			android:textSize="@dimen/size_large" />

		<com.frame.widget.CPButton
			android:id="@+id/txt_right_title"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:background="@null"
			android:gravity="center"
			android:paddingLeft="@dimen/padding_middle"
			android:paddingRight="@dimen/padding_middle"
			android:textColor="@color/txt_main"
			android:visibility="gone" />

		<com.frame.widget.image.CPImageView
			android:id="@+id/img_right_title"
			android:layout_width="@dimen/common_title_height"
			android:layout_height="@dimen/common_title_height"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:background="@null"
			android:gravity="center"
			android:padding="13dp"
			android:scaleType="fitCenter"
			android:visibility="gone" />
	</RelativeLayout>

	<FrameLayout
		android:id="@+id/layout_custom"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:visibility="gone" />

	<View
		android:id="@+id/view_divider_line"
		style="@style/divider_line"
		android:layout_width="match_parent"
		android:layout_alignParentBottom="true" />

</RelativeLayout>