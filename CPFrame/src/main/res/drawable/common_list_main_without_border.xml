<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

	<!-- 点击状态下的效果 -->
	<item android:state_enabled="true" android:state_pressed="true"><shape>

			<!-- 设置背景填充色为黑色 -->
			<solid android:color="@color/bg_pressed" />
		</shape></item>
	<!-- 正常状态下(非点击)的效果 -->
	<item android:state_enabled="true" android:state_pressed="false"><shape>

			<!-- 设置背景填充色为白色 -->
			<solid android:color="@color/bg_content" />
		</shape></item>
	<!-- 不可点击状态 -->
	<!-- 正常状态下(非点击)的效果 -->
	<item android:state_enabled="false"><shape>

			<!-- 设置背景填充色为白色 -->
			<solid android:color="@color/bg_pressed" />
		</shape></item>

</selector>